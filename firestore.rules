rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /users/{userId} {
      allow write: if request.auth != null;
      allow read: if belongsTo(userId);
    }
  }
}

function belongsTo(userId) {
    return request.auth.uid == userId
}